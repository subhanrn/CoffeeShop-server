{
  "name": "coffeeshop-server",
  "version": "1.0.0",
  "main": "server/server.js",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "format": "prettier {common,server}/**/*.{js,jsx,json,ts,tsx,css,scss,md,html} --write",
    "precommit": "lint-staged",
    "lint": "eslint .",
    "start": "node .",
    "posttest": "npm run lint",
    "build:sdk": "./node_modules/.bin/lb-sdk server/server.js ./client/sdk -l angular2 -d ng2web -i disabled"
  },
  "lint-staged": {
    "{src,e2e}/**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "git add"
    ],
    "{src,e2e}/**/*.{js,jsx,ts,tsx,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "async": "^2.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "helmet": "^3.16.0",
    "loopback": "^3.25.1",
    "loopback-boot": "^2.28.0",
    "loopback-component-explorer": "^6.3.1",
    "loopback-connector-mysql": "^2.4.1",
    "loopback-connector-oracle": "^4.1.2",
    "loopback-connector-postgresql": "^3.6.0",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^3.0.0"
  },
  "devDependencies": {
    "@mean-expert/loopback-sdk-builder": "^2.3.1",
    "eslint": "^3.19.0",
    "eslint-config-loopback": "^8.0.0",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.3.0",
    "prettier": "^1.16.4"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "UNLICENSED",
  "description": "coffeeshop-server"
}
